{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StickerMD",
  "version": "0.1.2",
  "identifier": "com.fryholic.stickermd",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sticky Notes",
        "width": 600,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "resizable": true,
        "visible": true,
        "minWidth": 400,
        "minHeight": 200,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc: http://ipc.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data: https: sticker:;",
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "fryholic",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../third_party_licenses.txt"
    ],
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown"
        ],
        "name": "Markdown File",
        "description": "Markdown File",
        "role": "Editor"
      }
    ]
  }
}